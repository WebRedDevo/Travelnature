mixin icon(name,mod)
  - mod = mod || ''
  svg(class="icon icon-" + name + ' ' + mod)
      use(xlink:href="#icon-" + name)

mixin article(title, image = 'main-bg-1.jpg')
  article.article-post
    a(href='page-article.html')
      h3= title
      .article-post__info.flex
        .info-item.flex
          span 1234 
          +icon('eye')
        .info-item.flex
          span 89
          +icon('comment')
          
      img(src='images/' + image alt='')
      p Dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco 



mixin guide(title, image = 'destinations-wallpaper.jpg')
  article.article-guide 
    a(href='page-destination.html').flex
      img(src='images/' + image alt='')
      h3= title 
      button.button.button--yellow  Discover
      
      
mixin journal-article(title, category, image = 'destinations-wallpaper.jpg')
  article.journal-article.bg-dark
    a(href='page-destination.html').flex
      img(src='images/' + image alt='')
      header.journal-article__header
        span.category&attributes(attributes)= category
      footer.journal-article__footer
        h3= title 
        .flex 
          .author.info
            span Traveo
          .views.info 
            span 2392


mixin article-sale(title,price,percent)
  article.article-sale.bg-article--dark
    img(src='images/sales.jpg' alt='').article-sale__img.article--img
    p.article-sale__percent.article--percent= percent
    footer.article-sale__footer.flex
      .article-sale__info
        h3= title
        p 7 Nights
        p 2 Adults
      .article-sale__price
        p= price
        
        
