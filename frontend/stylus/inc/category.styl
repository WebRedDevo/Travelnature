.section-description-category
  justify-content flex-start
  align-items center
  padding 50px
  h2
    color #34343f
    font-size 36px
    font-weight 500
    margin-right 20px
    padding-right 20px
    line-height 66px
    border-right 1px solid #34343f
  p
    color #595959
    max-width 500px
    font-size 14px
    font-weight 400

.modalera

  article
    transform scale(0.6)
    transition .55s

.mode-read
  .modalera
    position fixed
    top 0
    left 0
    right 0
    margin auto
    height 100%
    overflow auto
    background rgba(0,0,0,.65)
    &:before
      content ''
      position fixed
      top 0
      bottom 0
      left 0
      right 0
      cursor pointer
    article
      transform scale(1)

.mode-read
  overflow hidden
  .main
    filter blur(5px)
