.section
  &--initial-screen
    position relative
    padding-bottom 50px
    box-shadow 0 -8px 35px rgba(0, 0, 0, 0.04)
    .wallpaper
      position absolute
      z-index -2
    &.category-guides
      box-shadow inset 0 0 100px rgba(0,0,0,.06)
      justify-content center
      flex-direction column
      align-items center
      padding 50px 0
      h1
        width 100%
        text-align center
        color #444
        font-size 115px
        font-weight 600
        line-height 144px
        letter-spacing 5px
        position relative
        padding 0
      hr
        width 100%
      p
        font-size 19px
        max-width 800px
        margin auto
        text-align center
