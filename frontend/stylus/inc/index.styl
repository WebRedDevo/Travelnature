.main
  .bg-img
    position relative
    content ''
    background url(../images/wallpaper-1.jpg)
    background-size cover
    width 100%
    height 100%
    z-index 0
    top 0
    background-attachment fixed
  hr
    height 1px
    border 0
    background-color #d0d4d8
    opacity 0.5
  &-aside
    position fixed
    left 0
    align-items center
    height 100vh
    z-index 99
    &:before
      width 1px
      height 85%
      content ''
      position absolute
      left 0
      opacity .5
      background #ccc
      right 0
      margin auto
    &__nav-list
        flex-direction column
        align-items center
    &__nav-item
      margin-bottom 25px
      width 60px
      height 60px
      justify-content center
      a
        background #fff
        width 10px
        height 10px
        border-radius 50%
        display inline-block
        position relative
        &:before
          content ''
          width 36px
          height 36px
          background #ccc
          position absolute
          border-radius 50%
          left -13px
          top -13px
          opacity .5
          transition .33s
          transform scale(0)
      &:last-child
        margin-bottom 0
      &.active,&:hover,&:focus
        a
          &:before
            transform scale(1.2)



  &__screen
    min-height 100vh
    hr
      width 1280px
      left 0
      right 0
      margin auto
      position absolute
      bottom 0
      z-index 3
      height 1px
      background #ccc

    &--center
      justify-content center
      align-items center
      text-align center
      flex-direction column
      .main__screen-info
        max-width 70%
    &-info
      max-width 60%
      padding 0 50px
      h1
        color #fff
        font-size 95px
        font-weight 500
      .wavy
        text-decoration underline
        text-decoration-style wavy
        text-decoration-color #edba51
        text-decoration-skip-ink none
      h2
        color #fff
        font-size 75px
        font-weight 500
      p
        color #fff
        margin-top 35px
        font-size 19px
        font-weight 300
        line-height 25px
    .button
      margin-top 35px




// section what we do


.section--what-we-do
  .main__screen-info
    z-index 3
  &__icons
    margin-top 50px
.bg-inherit
  background inherit
  &.bg-dark
    &:before
      z-index 2
.what-we-do__icon
  transform translateZ(0)
  flex-direction column
  z-index 2
  width calc(25% - 25px )
  background inherit
  margin-right 25px
  overflow hidden
  position relative
  border-radius 5px
  box-shadow 0 14px 16px rgba(0,0,0,0.15)
  &:last-child
    margin-right 0
  &:before
    content ''
    background inherit
    position absolute
    width 100%
    height 100%
    z-index 0
    box-shadow inset 0 0 250px rgba(0, 0, 0, 0.18)
    filter blur(10px)
  .wrap
    position relative
    z-index 3
    padding 30px 0
  h6
    color #fff
    font-size 26px
    margin-top 20px
    font-weight 300
  p
    color #ccc
    margin-top 10px
    font-weight 100
    font-size 18px
    line-height 22px








.main__section
  .container
    max-width 970px
    margin 0 auto
    padding 72px 0
  h2
    color #4a4a4a
    font-size 48px
    font-weight 400
    line-height 38px
    text-align center
    margin-bottom 33px
  h3
    color #505050
    font-size 24px
    font-weight 500
    margin-bottom 5px
  p
    color #505050
    font-size 16px
    font-weight 400
    line-height 28px
    a
      color #4a90e2
      font-size 16px
      margin-left 8px
      font-weight 600
      line-height 28px

.section
  &--initial-screen
    position relative
    padding-bottom 50px
    box-shadow 0 -8px 35px rgba(0, 0, 0, 0.04)

    &.category-journal
      .right-side
        &:before
          z-index -3
      h1
        color #fff
        margin-left -350px
    &.category-articles,&.category-journal
      .right-side
        h2
          span
            background #fff
            padding 8px 0
            box-shadow 0px 4px 10px rgba(0, 0, 0, 0.09)


    &.category-articles
      h1
        mix-blend-mode lighten
        background #fff
        color #34343f
        margin-left -350px
      .right-side
        h2
          margin-left -100px
        .button
          margin-left -100px
    &.category-articles
      .right-side
        &:before
          content ''
          background #fff
          position absolute
          top 190px
          z-index -1
          bottom 0
          left 0
          right 0

    h1
      font-size 115px
      font-weight 600
      line-height 144px
      letter-spacing 5px
      padding 25px 40px
      position relative
    .left-side
      max-width 805px
      min-height 610px
      width 100%
    .right-side
      padding-left 35px
      position relative
      width calc(100% - 805px - 12% + 7px)
      h2
        max-width 80%
        margin-top 30px
        line-height 82px
        text-align left
      h3
        color #34343f
        font-size 24px
        font-weight 500
        line-height 26px
      p
        color #34343f
        font-size 16px
        font-weight 400
        line-height 27px
        max-width 500px
      .button
        margin-top 40px
        margin-bottom 40px
    hr
      margin 30px 0 30px
      max-width 500px
    .buttons
      .active
        background-color #edba51
        padding 5px 15px
        margin-right 20px
        text-transform uppercase
        &:hover
          &:after,&:before
            width 0
      a
        color #34343f
        font-size 14px
        margin-right 35px
        font-weight 500
        position relative
        padding-bottom 3px
        padding-top 3px
        &:hover
          &:after,&:before
            width 100%
        &:before
          content ''
          position absolute
          right 0
          top 0
          width 0%
          height 1px
          background-color #303741
          transition .33s
        &:after
          content ''
          position absolute
          left 0
          bottom 0
          width 0%
          height 1px
          background-color #303741
          transition .33s
        &:last-child
          margin-right 0

  &--happy-clients
    &__response
      align-items center
      position relative
      margin 65px 0
      &.response--left
        justify-content flex-end
        .response-info
          left 0
          &:before
            left 19px
            top 19px
            border-top 2px solid #7a96c4
            border-left 2px solid #7a96c4
          &:after
            right 19px
            bottom 19px
            border-bottom 2px solid #7a96c4
            border-right 2px solid #7a96c4
      &.response--right
        justify-content flex-start
        .response-info
          right 0
          &:before
            right 19px
            top 19px
            border-top 2px solid #7a96c4
            border-right 2px solid #7a96c4
          &:after
            left 19px
            bottom 19px
            border-bottom 2px solid #7a96c4
            border-left 2px solid #7a96c4
    .response-info
        width 470px
        height 289px
        box-shadow 0 2px 40px rgba(0, 0, 0, 0.2)
        background-color #ffffff
        padding 30px 45px
        position absolute
        &:before
          content ''
          position absolute
          width 33px
          height 33px
        &:after
          content ''
          position absolute
          width 33px
          height 33px
        p
          max-height 166px
          overflow hidden
        &__user
          margin-bottom 16px
          align-items center
          img
            width 46px
            height 46px
            border 1px solid #979797
            border-radius 50%
          span
            color #4e5665
            font-family "Avenir Next Cyr"
            font-size 24px
            font-weight 400
            line-height 25px
            margin-left 15px
    .response-img
      width 570px
      height 428px
  &--special-deals
    .container
      padding 30px 0 72px
    hr
      &:nth-child(2)
        max-width 270px
        margin 0 auto 55px
      &:nth-child(4)
        max-width 1170px
        margin 80px auto 0
    .special-deals__slider
      justify-content center
      align-items center
      .slider-button
        position absolute
        top 0
        bottom 0
        margin auto
        width 40px
        height 40px
        background-color #7a96c4
        border-radius 50%
        &.next
          right -20px
        &.prev
          left -20px
      .slide
        width 560px
        height 420px
        box-shadow 0 2px 24px rgba(0, 0, 0, 0.15)
        position relative
        img
          border-radius 4px
        &__footer
          position absolute
          bottom 0
          z-index 5
          padding 20px
          width 100%
          .flex
            justify-content space-between
            align-items flex-end
        .place
          color #ffffff
          font-family "Avenir Next Cyr"
          font-size 24px
          font-weight 400
          letter-spacing 4.96px
          span
            font-size 14px
        .coast
          color #ffffff
          font-family "Avenir Next Cyr"
          font-size 24px
          font-weight 400
          text-transform uppercase
          letter-spacing 4.96px
          span
            color #f5a623
            font-weight 700
        h3
          color #ffffff
          font-family "Avenir Next Cyr"
          font-size 48px
          font-weight 500
          line-height 54px
          margin-bottom 30px
          text-transform uppercase
          letter-spacing 4.13px
        &:nth-child(2)
          position relative
          z-index 3
          margin-left -300px
        &:nth-child(4)
          position relative
          z-index 3
          margin-right -300px
        &.active
          width 640px
          height 480px
          margin-left -340px
          margin-right -340px
          position relative
          z-index 4
          &:before
            content ''
            position absolute
            left 0
            right 0
            top 0
            bottom 0
            background-image linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, #000000 100%)
        &.first,
        &.last
          width 480px
          height 315px
          border-radius 4px
  &--about-us
    p:nth-child(3)
      margin-bottom 20px
