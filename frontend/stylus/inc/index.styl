.main
  &__section
    .container
      max-width 970px;
      margin 0 auto
      padding 72px 0
  h2
    color: #4a4a4a;
    font-family: 'Avenir Next Cyr';
    font-size: 48px;
    font-weight: 400;
    line-height: 38px;
    text-align center
    margin-bottom 33px
  p
    color: #505050;
    font-family: 'Avenir Next Cyr';
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
    a
      color #4a90e2
      font-size 16px
      margin-left 8px
      font-weight 600
      line-height 28px
.section
  &--initial-screen
    height 100vh
    background-image url(../images/main-bg-1.jpg)
    background-size cover
    background-repeat no-repeat
    padding-left 125px
    padding-top 300px
    position relative
    h1
      color: #ffffff;
      font-family: 'UnicaOne-Regular';
      font-size: 144px;
      font-weight: 400;
      line-height: 144px;
      text-transform: uppercase;
      letter-spacing: 2.12px;
      max-width 733px
      margin-bottom 90px
      position relative
      z-index 2
    a
      color #ffffff
      font-size 24px
      font-weight 400
      text-transform uppercase
      letter-spacing 1.23px
      padding 13px 60px
      border 1px solid #fff
      font-family 'Akrobat'
      margin-left 10px
      position relative
      z-index 2
    &:before
      content ''
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background-image radial-gradient(circle 667px at 37.51% -0.54%, rgba(255, 255, 255, 0) 0%, rgba(0, 0, 0, 0.49) 100%)
    &:after
      content ''
      position absolute
      top 75px
      bottom 20px
      left 17px
      right 17px
      margin auto
      border 1px solid #ffffff
      border-bottom 0
  &--what-we-do
    &__icons
      margin-top 45px
      justify-content center
    .what-we-do__icon
      text-align center
      width 33%
      flex-direction column
      justify-content center
      .icon
        width 150px
        height 150px
        margin 0 auto 26px
      strong
        color #4e5665
        font-family "Avenir Next Cyr"
        font-size 22px
        font-weight 500
        line-height 30px
        text-transform uppercase
  &--happy-clients
    &__response
      align-items center

      position relative
      margin 65px 0
      &.response--left
        justify-content flex-end
        .response-info
          left 0
      &.response--right
        justify-content flex-start
        .response-info
          right 0
    .response-info
        width 470px
        height 289px
        box-shadow 0 2px 40px rgba(0, 0, 0, 0.2)
        background-color #ffffff
        padding 30px 45px
        position absolute
        p
          max-height 166px
          overflow hidden
        &__user
          margin-bottom 16px
          align-items center
          img
            width 46px
            height 46px
            border 1px solid #979797
            border-radius 50%
          span
            color #4e5665
            font-family "Avenir Next Cyr"
            font-size 24px
            font-weight 400
            line-height 25px
            margin-left 15px
    .response-img
      width 570px
      height 428px
