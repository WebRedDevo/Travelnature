.main
  hr
    height 1px
    border 0
    background-color #d0d4d8
    opacity 0.5
  &__section
    .container
      max-width 970px
      margin 0 auto
      padding 72px 0
    h2
      color #4a4a4a
      font-size 48px
      font-weight 400
      line-height 38px
      text-align center
      margin-bottom 33px
    h3
      color #505050
      font-size 24px
      font-weight 500
      margin-bottom 5px
    p
      color #505050
      font-size 16px
      font-weight 400
      line-height 28px
      a
        color #4a90e2
        font-size 16px
        margin-left 8px
        font-weight 600
        line-height 28px
.article-news
  max-width 250px
  margin-right 35px
  h3
    color #ffffff
    font-family Akrobat
    font-size 24px
    font-weight 600
    letter-spacing 1.41px
    margin-bottom 13px
  p
    color #ffffff
    font-family Akrobat
    font-size 14px
    font-weight 200
    letter-spacing 1.23px
    strong
      font-weight 700
  a
    color #ffffff
    font-family "Akrobat"
    font-size 11px
    font-weight 600
    letter-spacing 1.23px
    text-align right
    float right
    padding-bottom 2px
    border-bottom 1px solid #fff

.section
  &--initial-screen
    position relative
    padding-bottom 50px
    box-shadow 0 -8px 35px rgba(0, 0, 0, 0.04)
    .wallpaper
      position absolute
      z-index -1
    &.category-guides
      .right-side
        h2
          margin-left 0
          font-size 70px
          span
            box-shadow: inherit;
    h1
      color #34343f
      font-size 115px
      font-weight 600
      line-height 144px
      letter-spacing 5px
      padding 25px 40px
      mix-blend-mode lighten
      background #fff
      position relative
      margin-left -350px
    .left-side
      max-width 805px
      min-height 610px
      width 100%
    .right-side
      padding-left 35px
      position relative
      width calc(100% - 805px - 12% + 7px)
      &:before
        content ''
        background #fff
        position absolute
        top 190px
        z-index -1
        bottom 0
        left 0
        right 0

      h2
        margin-left -100px
        max-width 80%
        margin-top 30px
        line-height 82px
        text-align left
        span
          background #fff
          padding 8px 0
          box-shadow 0px 4px 10px rgba(0, 0, 0, 0.09)
      h3
        color #34343f
        font-size 24px
        font-weight 500
        line-height 26px
      p
        color #34343f
        font-size 16px
        font-weight 400
        line-height 27px
        max-width 500px
      .button
        margin-top 40px
        margin-bottom 40px
        margin-left -100px

    hr
      margin 30px 0 30px
      max-width 500px
    .buttons
      .active
        background-color #edba51
        padding 5px 15px
        margin-right 20px
        text-transform uppercase
        &:hover
          &:after,&:before
            width 0
      a
        color #34343f
        font-size 14px
        margin-right 35px
        font-weight 500
        position relative
        padding-bottom 3px
        padding-top 3px
        &:hover
          &:after,&:before
            width 100%
        &:before
          content ''
          position absolute
          right 0
          top 0
          width 0%
          height 1px
          background-color #303741
          transition .33s
        &:after
          content ''
          position absolute
          left 0
          bottom 0
          width 0%
          height 1px
          background-color #303741
          transition .33s
        &:last-child
          margin-right 0
  &--what-we-do
    &__icons
      margin-top 45px
      justify-content center
    .what-we-do__icon
      text-align center
      width 33%
      flex-direction column
      justify-content center
      .icon
        width 150px
        height 150px
        margin 0 auto 26px
      strong
        color #4e5665
        font-size 22px
        font-weight 500
        line-height 30px
        margin-bottom 5px
        text-transform uppercase
      p
        color #909090
        font-size 14px
        font-weight 500
  &--happy-clients
    &__response
      align-items center
      position relative
      margin 65px 0
      &.response--left
        justify-content flex-end
        .response-info
          left 0
          &:before
            left 19px
            top 19px
            border-top 2px solid #7a96c4
            border-left 2px solid #7a96c4
          &:after
            right 19px
            bottom 19px
            border-bottom 2px solid #7a96c4
            border-right 2px solid #7a96c4
      &.response--right
        justify-content flex-start
        .response-info
          right 0
          &:before
            right 19px
            top 19px
            border-top 2px solid #7a96c4
            border-right 2px solid #7a96c4
          &:after
            left 19px
            bottom 19px
            border-bottom 2px solid #7a96c4
            border-left 2px solid #7a96c4
    .response-info
        width 470px
        height 289px
        box-shadow 0 2px 40px rgba(0, 0, 0, 0.2)
        background-color #ffffff
        padding 30px 45px
        position absolute
        &:before
          content ''
          position absolute
          width 33px
          height 33px
        &:after
          content ''
          position absolute
          width 33px
          height 33px
        p
          max-height 166px
          overflow hidden
        &__user
          margin-bottom 16px
          align-items center
          img
            width 46px
            height 46px
            border 1px solid #979797
            border-radius 50%
          span
            color #4e5665
            font-family "Avenir Next Cyr"
            font-size 24px
            font-weight 400
            line-height 25px
            margin-left 15px
    .response-img
      width 570px
      height 428px
  &--special-deals
    .container
      padding 30px 0 72px
    hr
      &:nth-child(2)
        max-width 270px
        margin 0 auto 55px
      &:nth-child(4)
        max-width 1170px
        margin 80px auto 0
    .special-deals__slider
      justify-content center
      align-items center
      .slider-button
        position absolute
        top 0
        bottom 0
        margin auto
        width 40px
        height 40px
        background-color #7a96c4
        border-radius 50%
        &.next
          right -20px
        &.prev
          left -20px
      .slide
        width 560px
        height 420px
        box-shadow 0 2px 24px rgba(0, 0, 0, 0.15)
        position relative
        img
          border-radius 4px
        &__footer
          position absolute
          bottom 0
          z-index 5
          padding 20px
          width 100%
          .flex
            justify-content space-between
            align-items flex-end
        .place
          color #ffffff
          font-family "Avenir Next Cyr"
          font-size 24px
          font-weight 400
          letter-spacing 4.96px
          span
            font-size 14px
        .coast
          color #ffffff
          font-family "Avenir Next Cyr"
          font-size 24px
          font-weight 400
          text-transform uppercase
          letter-spacing 4.96px
          span
            color #f5a623
            font-weight 700
        h3
          color #ffffff
          font-family "Avenir Next Cyr"
          font-size 48px
          font-weight 500
          line-height 54px
          margin-bottom 30px
          text-transform uppercase
          letter-spacing 4.13px
        &:nth-child(2)
          position relative
          z-index 3
          margin-left -300px
        &:nth-child(4)
          position relative
          z-index 3
          margin-right -300px
        &.active
          width 640px
          height 480px
          margin-left -340px
          margin-right -340px
          position relative
          z-index 4
          &:before
            content ''
            position absolute
            left 0
            right 0
            top 0
            bottom 0
            background-image linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, #000000 100%)
        &.first,
        &.last
          width 480px
          height 315px
          border-radius 4px
  &--about-us
    p:nth-child(3)
      margin-bottom 20px
